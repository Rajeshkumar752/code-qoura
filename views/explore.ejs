<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">


    <title>Home</title>
</head>

<body>


     <!-- NAVBAR SECTION  -->

    <nav style="z-index: 2; position: fixed; width: 100%; top:0;" class="mynav navbar navbar-expand-lg">
        <div class="container-fluid">
            <form method="GET" action="/home"><button type="submit"
                    style="color: black; font-weight: bold; font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif"
                    class="navbar-brand navhomebutton"> CODE_QOURA</button></form>
            <form action="/user/profile" method="GET"><button  type="submit" class="nav-button"><img style="margin-right: 10px; height: 28px;" src="/images/profile.png" alt=""> Me  </button></form>
        </div>
    </nav>

    <!-- NAVBAR ENDS  -->



    <!-- QUESTION HOLDER SECTION  -->

    
     
    <div id="questions-holder" class="col-lg-8 questions-holder">

        <div style=" padding: 1px; text-align: left; margin: 50px 0px; "  class="col-lg-6">
            <form action='/question/filter' style="display: inline; padding-right: 0px;  "
                method="POST">
                <select  name="tag" id="">
                    <option value="algorithms">Algorithms</option>
                    <option value="android">Android Development</option>
                    <option value="c++">C++</option>
                    <option value="datastructures">Data Structures</option>
                    <option value="dbms">DBMS</option>
                    <option value="java">Java</option>
                    <option value="machine">Machine Learning</option>
                    <option value="python">Python</option>
                    <option value="web">Web Development</option>
                    <option value="other">Other</option>
                </select>
                <button type="submit" style="margin: 30px 5px;  " class="btn btn-primary apply-btn">Apply</button>
            </form>
            <form style=" text-align: left;display: inline; " action="/question/explore" method="GET">
                <button type="submit" style="margin: 30px 0px;   " class="btn btn-danger apply-btn ">Remove</button>
            </form>
        </div>




        <% for(var i=0;i<question.length;i++){ %>
            

            <div style=" margin-top: 30px; margin-bottom: 30px;" class="card question">

                <h6>
                    <%=question[i].date%> <span class="badge badge-primary"></span>
                </h6>
                <br>

                <p style="font-size: 1.1 rem;">
                    <%=question[i].content%>
                </p>
                <div style="margin-left: 0px; padding: 0px;" class="container row">
                    <div style="padding: 1px;" class="col col-lg-6">
                        <form method="POST" action="/user/user_profile">
                            <button type="submit" name="authormail" value="<%=question[i].authormail%>"
                                class="btn btn-outline-success">
                                <%=question[i].author%>
                            </button>
                        </form>
                    </div>

                    <div style="padding: 1px;" class="col col-lg-6">
                        <form style=" text-align: right;" action="/answer/view/<%=question[i].questionid%>"
                            method="GET"> <button class="btn btn-outline-primary" type="submit">See Answers</button>
                        </form>
                    </div>


                </div>
            </div>

            <%}%>


    </div>




    <!-- QUESTION HOLDER SECTION ENDS  -->


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8"
        crossorigin="anonymous"></script>

</body>

</html>