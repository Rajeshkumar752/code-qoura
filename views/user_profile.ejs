<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">


    <title>Profile</title>
</head>

<body>


    <nav style="z-index: 2; position: fixed; width: 100%; top:0;" class="mynav navbar navbar-expand-lg">
        <div class="container-fluid">
            <form method="GET" action="/home"><button type="submit"
                    style="color: black; font-weight: bold; font-family:Cambria, Cochin, Georgia, Times, 'Times New Roman', serif"
                    class="navbar-brand navhomebutton">CODE_QOURA</button></form>
            <form action="/user/profile" method="GET"><button type="submit" class="nav-button"><img
                        style="margin-right: 10px; height: 28px;" src="/images/profile.png" /> Me</button></form>
        </div>
    </nav>





    <div style="padding: 10px;" class="col-lg-8 row profile-holder">
        <p
            style=" margin-left: 0px;margin-bottom: 30px; padding-left: 0px; 
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;  font-size: 2rem; font-weight: bold;">
            <%=user%>
        </p>

        <div style="padding-left: 0px; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;"
            class="">
            <!-- <button class="btn btn-lg btn-warning" style="  margin:10px;  display: inline;">Followers |<span
                    style="color: black; font-weight: bolder;">
                    <%=followers%>
                </span></button> -->
            <button class="btn btn-lg btn-warning" style="  margin:10px;  margin-left: 0px; display: inline;">Likes |<span
                    style="color: black; font-weight: bolder;">
                    <%=rating%>
                </span> </button>
            <button class="btn btn-lg btn-light" style="  margin:10px; display: inline;">Questions
                |<span style="color: black; font-weight: bolder;">
                    <%=questions%>
                </span> </button>
            <button class="btn btn-lg btn-info" style="  margin:10px; display: inline;">Answers |<span
                    style="color: black; font-weight: bolder;">
                    <%=answers%>
                </span> </button>
        </div>

        <div style="margin-top: 60px;  padding-left: 0px;">
            <h4
                style=" font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif">
                My Questions</h4>
            <hr style="width: 10%; height: 2px; margin-left: 2px;">
        </div>

        <% for(var i=0;i<question.length;i++){ %>

            <div style="margin:30px 0;  margin-bottom: 0px; " class="card question">

                <h6>
                    <%=question[i].date %><span class="badge badge-primary"></span>
                </h6>
                <br>

                <p style="font-size: 1.1 rem;">
                    <%=question[i].content%>
                </p>

                <div style="margin-left: 0px; padding: 0px;" class="container row">
                    <div style="padding: 1px;" class="col col-lg-6">
                        <form action="/question/delete" method="POST">
                            <button type="submit" name="qid" value="<%=question[i].questionid%>"
                                class="btn btn-outline-success">
                                Delete
                            </button>
                        </form>
                    </div>

                    <div style="padding: 1px;" class="col col-lg-6">
                        <form style="text-align: right;" action="/answer/view/<%=question[i].questionid%>"
                            method="GET"> <button class="btn btn-outline-primary" type="submit">See Answers</button>
                        </form>
                    </div>
                </div>
            </div>
            <%}%>


    </div>









    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8"
        crossorigin="anonymous"></script>

</body>

</html>